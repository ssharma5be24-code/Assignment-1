#include <stdio.h>

int main() {
    int arr[10][10], r, c, i, j;
    int rowSum, colSum;

    printf("Enter number of rows and columns: ");
    scanf("%d %d", &r, &c);

    printf("Enter elements of matrix:\n");
    for(i = 0; i < r; i++) {
        for(j = 0; j < c; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    // Sum of rows
    printf("Sum of rows:\n");
    for(i = 0; i < r; i++) {
        rowSum = 0;
        for(j = 0; j < c; j++) {
            rowSum += arr[i][j];
        }
        printf("Row %d sum = %d\n", i, rowSum);
    }

    // Sum of columns
    printf("Sum of columns:\n");
    for(j = 0; j < c; j++) {
        colSum = 0;
        for(i = 0; i < r; i++) {
            colSum += arr[i][j];
        }
        printf("Column %d sum = %d\n", j, colSum);
    }

    return 0;
}
